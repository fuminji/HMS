@model List<HMS.Web.Models.Domain.NewsPost>
@{
}
<div>
    <h1>All News</h1>
</div>

<div class="container py-5">
    @if(Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <td>Heading</td>
                    <td>Page Title</td>
                    <td>Published Date</td>
                    <td> </td>

                </tr>
            </thead>
            <tbody>
                @foreach (var news in Model)
                {
                    <tr>
                        <td>@news.Heading</td>
                        <td>@news.PageTitle</td>
                        <td>@news.PublishedDate</td>
                        <td>
                            <div class="d-flex">
                                <a class="me-3"><i class="bi bi-eye"></i></a>
                                <a class="me-3"
                                   asp-area=""
                                   asp-controller="NewsPosts"
                                   asp-action="Edit"
                                   asp-route-id="@news.Id"><i class="bi bi-pencil-square"></i></a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No News Yet!</p>
    }
</div>