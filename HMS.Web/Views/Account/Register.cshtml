@model HMS.Web.Models.ViewModels.RegisterViewModel
@{
}
<section class="gradient-form" style="background-image: url('https://images.pexels.com/photos/358636/pexels-photo-358636.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1'); background-size: cover; background-position: center; ">
    <div class="container ">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-6">
                <div class="card rounded-3 text-black">
                    <div class="card-body  mx-md-4">

                        <div class="text-center">
                            <img src="https://cdn-icons-png.freepik.com/512/5974/5974636.png"
                                 style="width: 80px; height: 80px;" alt="logo">
                            <h4 class="mt-1 mb-5 pb-1">Home Owner Management System</h4>
                        </div>

                        <form method="post">
                            <p>Please input your details to register.</p>

                            <div data-mdb-input-init class="form-outline mb-2">

                                <input type="text" id="username" class="form-control"
                                       placeholder="Username" asp-for="Username"/>
                                <label class="form-label" for="username"></label>
                            </div>

                            <div data-mdb-input-init class="form-outline mb-2">
                                <input type="email" id="email" class="form-control"
                                       placeholder="Email Address" asp-for="Email" />
                                <label class="form-label" for="email"></label>
                            </div>

                            <div data-mdb-input-init class="form-outline mb-2">
                                <input type="password" id="password" class="form-control" placeholder="Password" asp-for="Password" />
                                <label class="form-label" for="password"></label>
                            </div>

                            <div class="text-center pt-1 mb-5 pb-1">
                                <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block fa-lg " type="submit">
                                    Sign Up
                                </button>

                                
                            </div>

                            <div class="d-flex align-items-center justify-content-center pb-4">
                                <p class="mb-0 me-2">Don't have an account?</p>

                                <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-success">Create new</button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
